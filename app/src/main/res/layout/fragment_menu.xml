<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MenuFragment"
             android:id="@+id/menuFragment">

    <LinearLayout 
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_criar_anuncios"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_column="0"
            android:layout_margin="6dp"
            android:layout_row="0"
            android:width="150dp"
            android:background="@color/colorWhite"
            android:text="Criar Anúncio" />


        <Button
            android:id="@+id/btn_listar_anuncios"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:layout_row="0"
            android:width="150dp"
            android:background="@color/colorWhite"
            android:text="Listar Anúncios" />

        <Button
            android:id="@+id/btn_new_clients"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:layout_row="1"
            android:width="150dp"
            android:background="@color/colorWhite"
            android:text="Completar Menu" />

        <Button
            android:id="@+id/btn_new_clients2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:layout_row="1"
            android:width="150dp"
            android:background="@color/colorWhite"
            android:text="Completar Menu 2" />

    </LinearLayout>

</FrameLayout>
